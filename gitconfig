	trustExitCode = false

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  gl = log master --graph --full-history --color --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m" -n 20
[credential]
