# i3status configuration file.
# see "man i3status" for documentation.
# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!
general {
  colors = true
  #color_good = "#00FF00"
  interval = 2
}

order += "disk /"
#order += "run_watch VPN"
order += "wireless wlp3s0"
#order += "ethernet eth0"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 1"
order += "volume master"
order += "tztime local"

wireless wlp3s0 {
  #format_up = "Wireless: (%quality at %essid) %ip"
  format_up = "W: %essid"
  format_down = "W: down"
}

ethernet eth0 {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
  pidfile = "/var/run/vpnc/pid"
}

tztime local {
  format = "T: %m-%d-%Y %H:%M"
}

load {
  format = "L: %1min"
}

disk "/" {
  format = "D: %free"
}

cpu_usage {
  format= "CPU: %usage"
}

cpu_temperature 1 {
	format = " %degrees°"
	max_threshold = 95
}

volume master {
  format = "Vol: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
